<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AquaGuardians.PagePlayers">

    <ContentPage.Content>
        <VerticalStackLayout>
            <Label 
                Text="Lista de Players"
                FontSize="24"
                HorizontalOptions="Center" />

            <CollectionView x:Name="PlayersCollectionView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="10">
                            <Label Text="{Binding PlayerId}" FontSize="14" FontAttributes="Bold" />
                            <Label Text="{Binding Name}" FontSize="16" />
                            <Label Text="{Binding Username}" FontSize="14" />
                            <Label Text="{Binding Level}" FontSize="14" />
                            <Label Text="{Binding Score}" FontSize="14" />
                            <Label Text="{Binding JoinedAt}" FontSize="14" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ContentPage.Content>

</ContentPage>
