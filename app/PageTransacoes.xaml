<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AquaGuardians.PageTransacoes">

    <ContentPage.Content>
        <VerticalStackLayout>
            <Label 
            Text="Lista de Transações"
            FontSize="24"
            HorizontalOptions="Center" />

            <CollectionView x:Name="TransactionsCollectionView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="10">
                            <Label Text="{Binding TransactionId}" FontSize="14" FontAttributes="Bold" />
                            <Label Text="{Binding Amount, StringFormat='R$ {0:F2}'}" FontSize="16" />
                            <Label Text="{Binding Date, StringFormat='{0:dd/MM/yyyy}'}" FontSize="14" />
                            <Label Text="{Binding Description}" FontSize="14" />
                            <Label Text="{Binding Status}" FontSize="14" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ContentPage.Content>

</ContentPage>
