<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AquaGuardians.PageEmpresas">

    <ContentPage.Content>
        <VerticalStackLayout>
            <Label 
            Text="Lista de Empresas"
            FontSize="24"
            HorizontalOptions="Center" />

            <CollectionView x:Name="CompaniesCollectionView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="10">
                            <Label Text="{Binding CompanyId}" FontSize="14" FontAttributes="Bold" />
                            <Label Text="{Binding Name}" FontSize="16" />
                            <Label Text="{Binding ContactName}" FontSize="14" />
                            <Label Text="{Binding ContactEmail}" FontSize="14" />
                            <Label Text="{Binding ContactPhone}" FontSize="14" />
                            <Label Text="{Binding Address}" FontSize="14" />
                            <Label Text="{Binding CreatedAt}" FontSize="14" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>


        </VerticalStackLayout>
    </ContentPage.Content>

</ContentPage>
