<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AquaGuardians.PageRobots">

    <ContentPage.Content>
        <VerticalStackLayout>
            <Label 
                Text="Lista de Robots"
                FontSize="24"
                HorizontalOptions="Center" />

            <CollectionView x:Name="RobotsCollectionView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="10">
                            <Label Text="{Binding RobotId}" FontSize="14" FontAttributes="Bold" />
                            <Label Text="{Binding Name}" FontSize="16" />
                            <Label Text="{Binding Model}" FontSize="14" />
                            <Label Text="{Binding SerialNumber}" FontSize="14" />
                            <Label Text="{Binding Status}" FontSize="14" />
                            <Label Text="{Binding CreatedAt}" FontSize="14" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ContentPage.Content>

</ContentPage>
